  <body>
    <div class="bg-light top"><img src="assets/logo.png" alt="Logo" class="logo">
      <h3 class="logo-name text-secondary">NITW STORE</h3>
      </div>
  <nav class="navbar navbar-expand-lg sticky-top navbar-light font-weight-bold bg-light" id="navbarcontent">
    
  <a class="navbar-brand h1" href="#"></a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="nav navbar-nav mr-auto nav-pills">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home </a>
      </li>
	   <li class="dropdown">
  <a class="btn btn-light font-weight-bold dropdown-toggle" href="#" type="text" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Category
  </a>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="#books">Books</a>
      <a class="dropdown-item" href="#fruit">Fruits/Vegetables</a>
      <a class="dropdown-item" href="#dry">Dry Fruits</a>
      <a class="dropdown-item" href="#beauty">Beauty</a>
      <a class="dropdown-item" href="#fashion">Fashion</a>
      <a class="dropdown-item" href="#snack">Snacks</a>
  </div>
</li>
      <li class="nav-item active">
        <a class="nav-link" href="/view-cart">Cart</a>
      </li>
    <% if(!sess.user){ %>
		<li class="nav-item active">
        <a class="nav-link" href="/reg">SignUp</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/log">Login</a>
      </li>
      <% }else{ %>
        <li class="nav-item active">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <% } %>
    </ul>
  </div>

</nav>

  
 <div class="container" id="pr">
        <hr><h4>Cart</h4><hr>

  <div class="product">
    <table>
    
      <% for(var i=0; i<list.length; i++) {%><tr><td>
          <div class="card-deck-wrapper">
  <div class="card-deck">
     <div class="card">
      <img class="card-img-top" src='data:image/jpg; base64, <%=list[i].proimg %>' alt="Card image cap" height=200px
    </div>
  </div>
</div>
</td>
<td>
   <center> <h5 class=""><%= list[i].name %></h5><hr>
    <h6>â‚¹<%= list[i].price %><% list[i]._id %></h6></center>
    
</td>
<td><center><a class="btn btn-secondary" href='/Remove/<%= list[i]._id %>' role="button">Remove</a></center></td>
  <% } %>
</tr>
 
</table>
  </div>
  <div class="price">
    <h4>Order Summary</h4><hr><br>
      <% var total=0;
      for(var i=0; i<list.length; i++) {
          total=total+list[i].price;
          sess.price=total;
          } %>
      <h6>SubTotal : <%= total %></h6><br><hr>
      <a class="btn btn-info" href='/Address' role="button">Proceed</a>
  </div>
</div>



   
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
