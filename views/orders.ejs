<br>
  <div class="container-fluid view">
    <div class='cat'><ul class="font-weight-light text-dark"><li>
      
      <a href="/dashboard">Add New Product</a></li><li>
          <a href="#menu2">Remove Products</a></li><li>
      <a href="/Order">View Orders</a></li><li>
      <a href="#menu4">View Delivered Orders</a></li></ul>
    </div>
    <div class='con'>
                <div class="container jumbotron view">
                  <h2>All Orders</h2><hr>
                  <table>
                    <tr>
                        <td><h5>Order Id</h5></td>
                        <td><h5>Shipping Address</h5></td>
                        <td><h5>Total Amount</h5></td>
                        <td><h5>Payment</h5></td>
                        <td></td>
                    </tr>

                    <% for(var i=0; i<list.length; i++) {%><tr>
              <td>
                 <h6><%= list[i].user_email %></h6>
                  <p><%= list[i]._id %></p>
                  
              </td>
              <td>
                <h6><%= list[i].user_name %></h6>
                 <p><%= list[i].address.room_no %><%= list[i].address.hostel %><br><%= list[i].phone %></p>
                 
             </td>
             <td>
               
                 <h6>â‚¹<%= list[i].total_amount %></h6>
                 
             </td>
             <td>
                
                <h6><% if(list[i].payment==false){ %>
                    <h6>COD</h6>
                <% }else{ %>
                    <h6>Paid</h6><% }%>
             </td>
              <td><center><a class="btn btn-secondary" href='/deliver/<%= list[i]._id %>' role="button">Mark As Delivered</a></center></td>
                <% } %>
              </tr>
               
              </table>
           
          </div>
                  
                  
    </div>
