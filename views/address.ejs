<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/style.css">
    <title>NITW STORE</title>

  </head>
  <body>
    
    <div class="bg-light top"><img src="assets/logo.png" alt="Logo" class="logo">
      <h3 class="logo-name text-secondary">NITW STORE</h3>
      </div>
  <nav class="navbar navbar-expand-lg sticky-top navbar-light font-weight-bold bg-light" id="navbarcontent">
    
  <a class="navbar-brand h1" href="#"></a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="nav navbar-nav mr-auto nav-pills">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home </a>
      </li>
	   <li class="dropdown">
  <a class="btn btn-light font-weight-bold dropdown-toggle" href="#" type="text" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Category
  </a>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="#books">Books</a>
    <a class="dropdown-item" href="#fruit">Fruits/Vegetables</a>
    <a class="dropdown-item" href="#dry">Dry Fruits</a>
    <a class="dropdown-item" href="#beauty">Beauty</a>
    <a class="dropdown-item" href="#fashion">Fashion</a>
    <a class="dropdown-item" href="#snack">Snacks</a>
  </div>
</li>
      <li class="nav-item active">
        <a class="nav-link" href="/view-cart">Cart</a>
      </li>
    <% if(!sess.user){ %>
      <li class="nav-item active">
        <a class="nav-link" href="/log">Login</a>
      </li>
      <% }else{ %>
        <li class="nav-item active">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <% } %>
    </ul>
  </div>

</nav>


 <div class="container">
    <hr><h4>Enter Shipping Address</h4><hr>
    <div class="container product">
    <form method='POST' action="/Payment">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Enter your name" name="o_name" required>
        </div>
        <div class="form-group">
          <label for="room">Room Number:</label>
          <input type="text" class="form-control" id="room" placeholder="Enter room no." name="room" required>
        </div>
        <div class="form-group">
          <label for="hostel">Hostel/Block:</label>
          <input type="text" class="form-control" id="hostel" placeholder="Enter hostel/block name" name="hostel" required>
        </div>
        <div class="form-group">
          <label for="phone">Contact Number</label>
          <input type="text" class="form-control" id="phone" placeholder="Enter contact no." name="phone" required>
        </div>
      </div>
        <div class="price">
            <h4>Order Summary</h4><hr><br>
              <h6>SubTotal : <%= sess.price %></h6><br><hr>
              <button type="submit" class="btn btn-success">Proceed To Payment</button>
              <a class="btn btn-default" href="/view-cart" role="button">Cancel</a>
         </div> 
      </form>

  </div>
</div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
